# ----- Required -----
DATABASE_URL=postgresql://<user>:<pass>@<host>/<db>?sslmode=require&channel_binding=require
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme_generate_strong_secret

# Owner-only login (Phase 1)
OWNER_EMAIL=admin@trackex.com
# bcrypt hash of your chosen owner password (do NOT store plaintext)
OWNER_PASSWORD_HASH=$2b$12$

# Optional Redis for real-time features (Phase 2)
REDIS_URL=redis://default:<password>@<host>:<port>

# Data retention (days)
DEFAULT_EVENTS_RETENTION_DAYS=90
DEFAULT_SCREENSHOTS_RETENTION_DAYS=30

# Security
DEVICE_TOKEN_SECRET=<generate-secure-secret>
