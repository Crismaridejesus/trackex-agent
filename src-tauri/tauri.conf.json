{
  "productName": "TrackEx Agent",
  "version": "1.1.1",
  "identifier": "com.trackex.agent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TrackEx Agent",
        "width": 420,
        "height": 600,
        "resizable": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "TrackEx Desktop Agent",
    "longDescription": "Employee monitoring and time tracking agent for TrackEx platform",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "12.6",
      "signingIdentity": "Developer ID Application: Leon Svoboda (C4DS6Q994G)",
      "hardenedRuntime": true
    },
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "http://localhost:3000/api/desktop/updates/{{target}}-{{arch}}/{{current_version}}",
        "https://trackex.app/api/desktop/updates/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dangerousInsecureTransportProtocol": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY1NkUzRjYwNEMwRDVFOEUKUldTT1hnMU1ZRDl1OWFDK0VoejBvK2JybXZmY1RTbTVMK3pHcFY0UU9HcnhiSTQ4b0ZObUVIUzcK"
    }
  }
}
